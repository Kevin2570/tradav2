generator client {
  provider = "prisma-client-js"
}

datasource db {
  // If you're still on SQLite for now:
  provider = "sqlite"
  url      = "file:./dev.db"
  // If you later switch to Postgres, change the above 2 lines to:
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String
  borough    String?
  matchStyle String
  offers     Offer[]
  wants      Want[]
  createdAt  DateTime @default(now())
}

model Offer {
  id        String   @id @default(cuid())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model Want {
  id        String   @id @default(cuid())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model MatchThread {
  id        String    @id @default(cuid())
  userAId   String
  userBId   String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String       @id @default(cuid())
  thread    MatchThread  @relation(fields: [threadId], references: [id])
  threadId  String
  authorId  String
  text      String
  createdAt DateTime     @default(now())
}
